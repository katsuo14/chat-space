.main-chat__message-list__message-box{data: {message: {id: message.id}}}
  .main-chat__message-list__message-box__info
    .main-chat__message-list__message-box__info__user
      = message.user.name
    .main-chat__message-list__message-box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message
    - if message.content.present?
      %p.main-chat__message-list__message__content
        = message.content
    = image_tag message.image.url, class: 'main-chat__message-list__message__image' if message.image.present?